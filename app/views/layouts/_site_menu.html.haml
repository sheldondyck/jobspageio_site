%header
  .navbar.navbar-default.navbar-fixed-top(role='navigation')
    =render('layouts/colour_bar')
    .container
      .navbar-header
        =link_to icon_tag('briefcase') + app_name, www_url, {class: 'navbar-brand'}
      %ul.nav.navbar-nav.navbar-right
        %li{:class => active('site#features'), id: 'features_link'}
          =link_to 'Features', '#features', class: 'scroll'
        %li{:class => active('site#pricing'), id: 'pricing_link'}
          =link_to 'Pricing', '#pricing', class: 'scroll'
        %li{:class => active('site#blog'), id: 'blog_link'}
          =link_to 'Blog', '#'
        %li
          %a{href: signup_path, id: 'navbar-signup'}
            %button.btn.btn-default.navbar-btn.btn-primary Join Now for Free!
        %li
          %a{href: signin_path, id: 'navbar-signin'}
            %button.btn.btn-default.navbar-btn Sign In
  .navbar-spacer
